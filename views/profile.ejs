<%- include('partials/header.ejs') -%>
<div class="main-profile">

    <% if (locals.messages.errors) { %> 
      <% messages.errors.forEach( el => { %>
         <div class="alert alert-danger"><%= el.msg %></div>
         <% }) %> 
         <% } %> 
         <% if (locals.messages.info) { %>
          <% messages.info.forEach( el => { %>
         <div class="alert alert-info"><%= el.msg %></div>
         <% }) %> 
      <% } %>

   <div class="user-form user-info">
      <form action="/profile/user/<%= user.id %> " method="post">
         <input type="hidden" name="_method" value="PUT" />
         <div class="form-group flex between-space"><label for="userName">Name :  </label><input type="text" name="userName" value="<%= user.userName  %>"></div>
         <div class="form-group flex between-space"><label for="email">Email :  </label ><input type="email" name="email" value="<%= user.email  %>"></div>
         <div class="form-group flex between-space"><label for="confirmEmail">Confirm Email :  </label><input type="email" name="confirmEmail" value="<%= user.email  %>"></div>
         <button type="submit" class="btn-modal">save</button>
      </form>
   </div>
   <div class="change-pass">
      <p>if you want change <button class="btn btn-open">password</button></p>
      <section class="modal hidden user-form">
         <div class="flex-end">
            <button class="btn-close">X</button>
         </div>
         <h3>change password</h3>
         <form action="/profile/<%=user.id %> " method="post">
            <input type="hidden" name="_method" value="PUT" />
            <div class="form-group flex between-space">
               <label for="oldPass">Old password</label>
               <input type="password" name="oldPassword" id="oldPass">
            </div>
            <div class="form-group flex between-space">
               <label for="password">password</label>
               <input type="password" name="password" id="password">
            </div>
            <div class="form-group flex between-space">
               <label for="confirmPassword">confirm password</label>
               <input type="password" name="confirmPassword" id="confirmPassword">
            </div>

            <button class="btn-modal">submit</button>
         </form>
      </section>
   </div>

   <h2>you write a total of : <%= result  %> </h2>
   <div class="overlay hidden"></div>
</div>

<%- include('partials/footer.ejs') %>