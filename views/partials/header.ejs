<body>
   <% if(user._id){ %>
   <header>
      <div class="container flex between-space space-mg">
         <h2 class="logo-head"><a href="/home">Money Where Spent</a></h2>
         <% if(search != null) {%>
<form action="/q" method="POST" class="search-form" id="searchForm">
            <div class="input-group">
               <input type="text" class="form-control" name="searchInput" <% if (search != '') { %> value="<%= search %>"
         <% } %>>
               <div class="input-group-append"><button class="btn btn-primary"><i class="fas fa-search"></i></button>
               </div>
            </div>
         </form>
         <%  }%> 
         
         <ul class="flex margin ">
            <li><a href="/user/logout" class="btn btn-primary">logout</a> </li>
            <li class="mg-ft"> <a href="/profile "><span class="fosz"><%= user.userName %> </span></a></li>
         </ul>
      </div>

   </header>
   <%} else {%>
   <header>
      <div class="container flex justify-content-around space-mg">
         <h1 class="logo-head"><a href="/home">Money Where Spent</a></h1>
         <a href="/user/login" class="col-sm-1 btn btn-primary margin"> Login</a>
         <a href="/user/signup" class="col-sm-1 btn btn-primary mg-ft"> Signup</a>
      </div>
   </header>
   <% } %>