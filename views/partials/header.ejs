<body>
   <% if(user == null || !user._id){ %>
         <header>
      <div class="container flex justify-content-around space-mg">
         <h1 class="logo-head"><a href="/home">Money Where Spent</a></h1>
         <a href="/user/login" class="btn btn-outline-success margin"> Login</a>
         <a href="/user/signup" class="btn btn-outline-success mg-ft"> Sign Up</a>
      </div>
   </header>
   
   <%} else {%>
<header>
      <div class="header-cont">
         <h2 class="logo-head"><a href="/home">Money Where Spent</a></h2>
         <button class="mobile-nav-toggle" aria-controls="primary-navigation" aria-expanded="false">
            <span class="sr-only">Menu</span>
         </button>
         <nav id="primary-header" class="primary-header">
            <ul id="primary-navigation" data-visible="false" class="nav-links flex primary-navigation">
               <li>
                  <% if(search != null) {%>
                  <form action="/q" method="POST" class="search-form" id="searchForm">
                     <div class="inputs-group flex">
                        <input type="text" class="form-control" name="searchInput" placeholder="Enter Spend name" <% if (search != '') { %> value="<%= search %>"
                        <% } %>>
                        <div class="input-group-append"><button class="btn btn-outline-success"><i class="fas fa-search"></i></button>
                        </div>
                     </div>
                  </form>
                  <%  }%> 
               </li>
               <li class="right active"><a href="/home">Home</a></li>
               <li><a href="/home/chartPage">Spend Chart</a></li>
         </ul>
         
         </nav>
         <div aria-expanded="false" class="profile-img" id="img-pro" ><img src="/images/profile-pic.jpg" alt=""></div>
         <ul class="profile-link" id="nav">
            <li class="sub-menu">
               <div class="user-info">
                  <img src="/images/profile-pic.jpg" alt="">
                  <h3><%= user.userName %></h3>
               </div>
               <hr>
            </li>
            <li> <a href="/profile " class="sub-menu-link"><i class="fa fa-user"></i> <p>Profile</p> <span >></span></a></li>
            <li ><a href="/user/logout" class="sub-menu-link"><i class="fas fa-sign-out-alt"></i><p>logout</p> <span>></span></a></li>
            <li ><a href="/contact" class="sub-menu-link"><i class="fa fa-address-book"></i><p>Contact Us</p> <span>></span></a></li>
         </ul>
      </div>
   </header>
   <% } %>